#include "stm32f0xx.h"
#include "stm32f0_discovery.h"
#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int EASY_MIN = 10;
int MED_MIN = 6;
int HARD_MIN = 3;

/*
 * Function:  start_timer(mode)
 * --------------------
 * Description: Starts a count down timer on STM invoked with I2C
 * Parameters:
 * 		- mode: Selects easy(1), medium(2), hard(3)
 * Returns: void
 * Example:
 * Updates:
 *  	- 06/11/19 Mitchell Ciupak
 *  		- Init
 */
void start_timer(int mode) {

	unsigned int seconds = 0;

	switch (mode)
	{
	    case 1:
	    	seconds = 60 * EASY_MIN;
	        break;
	    case 2:
	    	seconds = 60 * MED_MIN;
	        break;
	    case 3:
	    	seconds = 60 * HARD_MIN;
	    	break;
	    default:
	    	seconds = 60 * EASY_MIN;
	}

	init_time6();


}

void init_tim6(void) {
	    //Enable clock to Timer 6.
		RCC->APB1ENR |= RCC_APB1ENR_TIM6EN;
		//Set PSC and ARR values so that the timer update event occurs exactly once every 1ms
		TIM6->PSC = 480 - 1;
		TIM6->ARR = 100 - 1;
		//Enable UIE in the TIMER6's DIER register.
		TIM6->DIER |= TIM_DIER_UIE;
		TIM6->CR1 = TIM_CR1_CEN;
		//Enable TIM6 interrupt in NVIC's ISER register.
		NVIC->ISER[0] = 1<<TIM6_DAC_IRQn;
	}


int calls = 0;
int count = 100;

void countdown() {
    char line[20];
    calls++;
    if(calls == 1000) {
    	calls = 0;
		if(count >= 0) {
			count--;
		}

		sprintf(line, "Count : %d ", count);
		display2(line);
    }
